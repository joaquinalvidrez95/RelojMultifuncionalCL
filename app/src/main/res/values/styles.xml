<resources>
    <!--Theme.AppCompat.Light.DarkActionBar-->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material.App</item>
    </style>

    <style name="PreferenceThemeOverlay.v14.Material.App">
        <item name="preferenceCategoryStyle">@style/Preference.Category.Material.CustomColor</item>
        <item name="seekBarPreferenceStyle">@style/Preference.SeekBarPreference.Material.App</item>
    </style>

    <style name="Preference.SeekBarPreference.Material.App">
        <item name="android:layout">@layout/pref_seekbar</item>
        <item name="showSeekBarValue">false</item>
    </style>

    <style name="Preference.Category.Material.CustomColor">
        <item name="android:layout">@layout/preferences_category</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.AppCompat.Button.App">
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.AppCompat.Button.App.Start">
        <item name="colorButtonNormal">@color/colorStart</item>

    </style>

    <style name="Widget.AppCompat.Button.App.Stop">
        <item name="colorButtonNormal">@color/colorPause</item>
    </style>

    <style name="Widget.AppCompat.Button.App.Reset">
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="NumberPickerTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>

    <style name="DividerLine">
        <item name="android:background">@color/divider</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="TextViewColon">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:text">:</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
